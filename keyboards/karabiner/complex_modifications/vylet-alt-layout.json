          "type": "basic",
          "from": { "key_code": "w", "modifiers": { "mandatory": ["shift"] } },
          "to": [
            { "set_variable": { "name": "prev_vylet_c", "value": 1 } },
            { "key_code": "c", "modifiers": ["shift"] }
