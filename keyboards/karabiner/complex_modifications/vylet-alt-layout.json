    {
      "description": "Vylet Magic Key - Sequential Leader Key System",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "m" },
          "conditions": [{ "type": "variable_if", "name": "prev_vylet_c", "value": 1 }],
          "to": [
            { "key_code": "k" },
            { "set_variable": { "name": "prev_vylet_c", "value": 0 } }
          ],
          "description": "c + magic ⇒ k"
        },
        {
          "type": "basic",
          "from": { "key_code": "m" },
          "conditions": [{ "type": "variable_if", "name": "prev_vylet_l", "value": 1 }],
