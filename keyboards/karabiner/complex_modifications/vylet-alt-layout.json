    {
      "description": "Vylet Magic Key - Variable Tracking System",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "w" },
          "to": [
            { "set_variable": { "name": "prev_vylet_c", "value": 1 } },
            { "key_code": "c" }
          ],
          "to_delayed_action": {
            "to_if_invoked": [{ "set_variable": { "name": "prev_vylet_c", "value": 0 } }],
            "to_if_canceled": [{ "set_variable": { "name": "prev_vylet_c", "value": 0 } }]
          },
          "parameters": {
            "to_delayed_action_delay_milliseconds": 2000
          },
          "description": "Track vylet c (QWERTY w) - 2 second retention"
        },
        {
          "type": "basic",
          "from": { "key_code": "u" },
          "to": [
            { "set_variable": { "name": "prev_vylet_l", "value": 1 } },
            { "key_code": "l" }
          ],
          "to_delayed_action": {
