            { "key_code": "l" },
            { "set_variable": { "name": "prev_vylet_l", "value": 0 } }
          ],
          "description": "l + magic ⇒ l (double l)"
        },
        {
          "type": "basic",
          "from": { "key_code": "m" },
          "conditions": [{ "type": "variable_if", "name": "prev_vylet_g", "value": 1 }],
